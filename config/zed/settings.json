{
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "version": "2",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-opus-4-thinking"
    },
    "button": false,
    "play_sound_when_agent_done": true
  },
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "tab_size": 2,
  "auto_update": false,
  "show_signature_help_after_edits": true,
  "inline_code_actions": false,
  "show_completions_on_input": true,
  "max_tabs": 1,
  "git": {
    "git_gutter": "hide",
    "inline_blame": { "enabled": false }
  },
  "gutter": {
    "folds": false,
    "breakpoints": true,
    "runnables": true,
    "min_line_number_digits": 3
  },
  // TODO: What does this do?
  "bottom_dock_layout": "full",
  "soft_wrap": "editor_width",
  "format_on_save": "off",
  "tab_bar": { "show": false },
  "scrollbar": { "show": "never" },
  "middle_click_paste": false,
  "ui_font_family": "IosevkaHappy Nerd Font",
  "buffer_font_family": "IosevkaHappy Nerd Font",
  "buffer_line_height": { "custom": 1.4 },
  "vim_mode": true,
  "ui_font_size": 15,
  "agent_font_size": 18,
  "buffer_font_size": 16,
  "always_treat_brackets_as_autoclosed": true,
  "pane_split_direction_horizontal": "down",
  "pane_split_direction_vertical": "right",
  "icon_theme": {
    "mode": "dark",
    "dark": "Colored Zed Icons Theme Dark",
    "light": "Colored Zed Icons Theme Light"
  },
  "theme": {
    "mode": "dark",
    "light": "cozy night",
    "dark": "cozy night"
  },
  "use_system_path_prompts": false,
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "agent_review": false,
    "code_actions": false,
    "selections_menu": false
  },
  "lsp": {
    "nil": {
      "initialization_options": {
        "formatting": { "command": ["alejandra", "--quiet", "--"] }
      }
    }
  },
  "languages": {
    "Lua": {
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": ["--stdin-filepath", "{buffer_path}", "-"]
        }
      }
    },
    "TypeScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Nix": { "language_servers": ["nil", "!nixd"] }
  },
  "restore_on_startup": "last_workspace",
  "when_closing_with_no_tabs": "keep_window_open",
  "use_system_prompts": false,
  "current_line_highlight": "gutter",
  "title_bar": {
    "show_onboarding_banner": false,
    "show_sign_in": false
  },
  "project_panel": {
    "button": false,
    "auto_reveal_entries": false,
    "auto_fold_dirs": false,
    "show_diagnostics": "errors",
    "hide_root": true,
    "hide_gitignore": false
  },
  "search": {
    "button": false,
    "regex": true
  },
  "use_smartcase_search": true,
  "outline_panel": {
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "diagnostics": {
    "button": true,
    "include_warnings": true
  },
  "terminal": {
    "line_height": "standard",
    "toolbar": { "breadcrumbs": true },
    "button": false
  },
  "auto_install_extensions": {
    "colored-zed-icons-theme": true,
    "git-firefly": true,
    "graphql": true,
    "html": true,
    "lua": true,
    "nix": true,
    "tom": true
  },
  "debugger": {
    "button": false
  }
}
